<style type="text/css">
  .form-sure{
      float: right;
  }
  .href{
      text-align: center;
      padding: 10px;
  }
  #ahref{
      font-size: 20px;
      color: red;


  }

</style>
<header id="am-topbar am-topbar-inverse">

  <div class="am-panel am-panel-default">
    <div class="am-panel-hd" style="text-align: center">寄货人地址</div>
 </div>
</header>
<div class="href">
   <a id="ahref" class="am-btn am-btn-default" href="/orders/new_manco_addr?supplier_id=<%=@supplier.id%>" title="">新增寄货人地址 </a>
</div>
  <form action="arrival" class="am-form" method="post">
    <input type="hidden" name="supplier_id"value="<%=@supplier.id%>">
    <input type="hidden" name="platform"value="<%=@platform%>">
       <table class="am-table am-table-striped am-table-hover">
         <tr>
           <td>&nbsp;</td>
            <td >姓名</td>
           <td >手机</td>
           <td >联系电话</td>
           <td>删除</td>
         </tr>
     <%if @addrs.size>0%>
               <%@def_addrs.each do |def_addr|%>
                 <tr>
                   <td><%=radio_button_tag "member_departure_id",def_addr.addr_id ,:checked=>true%></td>
                   <td ><%=def_addr.name%></td>
                   <td ><%=def_addr.mobile%></td>
                   <td ><%=def_addr.addr%></td>
                   <td><input type="button"   data-url="/orders/destroyaddr" value="删除" class="am-btn am-btn-primary delete "></td>

                 </tr>

         <% end %>
               <%end%>


       </table>
       <input type="submit" class="am-btn am-btn-primary am-btn-block form-sure" value="确认选择" >
   </form>
<br/>
<br/>
<%= javascript_include_tag "jquery", "jquery_ujs" %>
<script type="application/javascript">
    $(document).ready(function(){
        $(".delete").bind("click",function(){
            var addr_idsss=   $(this).parent("td").siblings("td").eq(0).children("input[type='radio']").val();
            var thisTr =  $(this);
            $.ajax( {
                url: "/orders/destroyaddr?supplier_id=#{<%@supplier.id%>}",
                type: "post",
                data:{addr_idsss:addr_idsss },
                success:function(res){
                    thisTr.parents("td").parents("tr").remove();
                }
            });

        })


    })

</script>
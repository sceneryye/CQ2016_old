<% provide :title, '昌麒生态园-产品分类查询' %>

<%@class="button hollow alert expanded large"%>
<ul class="no-bullet">
  <li>
    <form accept-charset="UTF-8" action="/search" method="get">
      <div class="input-group">
          <input id="search_input" type="text" name="q" placeholder="请输入搜索关键字"
              value="<%= controller_name=="search" ? params[:q] : Ecstore::Config.get(:search_key)%>" class="input-group-field">
            <div class="input-group-button">
              <input type="submit" class="button" value="搜索">
            </div>
      </div>
    </form>
  </li>
   <%@menu_categories.each do |category|%>
   <li><%=link_to cat_path(category),class:@class do%>
        <i class="fa fa-tags"></i>&nbsp;&nbsp;<%=category.cat_name%>
       <%end%>
   </li> 
    <%end if @menu_categories%>
</ul>
</div>

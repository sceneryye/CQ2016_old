<% provide :title, '昌麒生态园-订单列表' %>
<table class="hover" id="order_list">
 <!--  <tr>
    <th>订单号</th>
    <th>下单时间</th>
    <th>金额</th>
    <th >状态</th>
    <th>操作</th>
  </tr> -->

<%@orders.each  do |order|%>
    <tr>
        <td>
        <div class='row'>
			<div class="columns small-12,medium-3">
        		订单编号：<%=link_to order.order_id, order_path(order)%>
        	</div>
        	<div class="columns small-12,medium-2">
        		下单时间：<%=order.created_at%>
        	</div>
        	<div class="columns small-12,medium-2">
        		订单金额：¥<%=(order.final_amount).round%>
        	</div>
        	<div class="columns small-12,medium-2">
        		订单状态：<%=order.status_text%>
        	</div>
        	<div class="columns small-12,medium-3 ">
        		<%=link_to "查看",detail_order_path(order),:target=>"_blank", class:'button secondary'%>
          		<%=link_to "去付款",order_path(order),class:'button',:target=>"_blank" if order.status == 'active' && order.pay_status=='0'%>
        	</div>
    	</div>
        </td>
    </tr>
<%end%>

</table>

	<div class="pagination">
		<%=will_paginate @orders,:container=>false%>
	</div>
	
                            </div>                           
                        </div> 
                        
                        <div class="row">
                            <div class="col-sm-11">
                                <div class="form-group">
                                    <%=f.text_field :name,:value=>"",:class=>"form-control",:placeholder=>"*姓名*",:required=>"required"%>

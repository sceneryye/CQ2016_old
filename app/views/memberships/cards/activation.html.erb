                                     <%=f.submit "提 交",:class=>"btn btn-success btn-lg",:name=>"btn",:id=>"btn" %>
                                     <%=link_to "返 回","/",:class=>"btn btn-success btn-lg", :style=>'color:white'%>            
                                </div>
                            </div>

                        <div class="row">
                             <div class="col-sm-11">
                                <div class="form-group">
                                    <%=f.text_field :mobile,:value=>"",:class=>"form-control",:placeholder=>"*手机*",:required=>"required"%>
                                </div>
                                <div class="help-block" rel="user_mobile"></div>

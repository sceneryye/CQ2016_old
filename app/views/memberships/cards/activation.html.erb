                        <div class="row">
                            <div class="col-sm-11">
                                <div class="form-group">
                                    <%=f.text_field :card_num,:value=>"",:class=>"form-control",:placeholder=>"*卡号*",:required=>"required"%>
                                </div>
                                <div class="help-block" rel="user_name"></div>
                            </div>                           
                        </div> 
                        <div class="row">

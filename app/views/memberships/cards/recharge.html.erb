<% provide :title, '昌麒生态园-会员卡充值' %>

<div class="row">
	<div class="medium-5 large-3 columns">
		<div class="callout secondary">
			<%=form_for :card,:url=>topop_cards_path do |f|%>
			<div class="row">
				<div class="small-12 columns">
					<label>您的会员卡号
						<%=f.text_field :card_id,readonly:'true',:required=>"required",value:@user.card_num%>
					</label>
					</div>
					<div class="small-12 columns">
					<label>
						<%=f.text_field :amout,placeholder:'充值金额',:required=>"required"%>
					</label>
					<%=f.submit "提 交",:class=>"button expanded"%>
				</div>
			</div>
			<%end%>
		</div>
	</div>
</div>
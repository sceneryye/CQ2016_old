<table class="table table-striped" id="subcard_list">
  <tr>
    <th>如意卡号</th>
    <th>状态</th>
    <th>已提现</th>
    <th>未提现</th>
  </tr>

  <%@subcards.each  do |subcard|%>
      <tr>
        <td><%=subcard.no%></td>
        <td><%=subcard.use_status ?  "已激活" : "未激活"%></td>
        <td>¥<%=subcard.card_trading_logs.select{ |trading| trading.parent_rebate_id}.collect{ |trading| trading.amount }.inject(:+)%></td>  
        <td>¥<%=subcard.card_trading_logs.select{ |trading| trading.parent_rebate_id.nil? }.collect{ |trading| trading.amount }.inject(:+)%></td>  
      </tr>
  <%end if @subcards%>
  <%if @subcards.blank?%>
  <tr><td colspan='4'>暂无如意卡记录</td></tr>
  <%end%>

</table>
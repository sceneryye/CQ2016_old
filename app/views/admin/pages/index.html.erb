<div class="page-header">
  <h2>所有内页<%= link_to '新建内页', new_admin_page_path, :class => "pull-right btn btn-primary" %></h2>

</div>

<table class="table table-bordered table-hover">
  <tr>
    <th>专题</th>
    <th>内页标题</th>
    <th>排序</th>
    <th colspan="3">操作</th>
  </tr>

<% @pages.each do |page| %>
  <tr>
    <td><%= page.topic.title if page.topic %></td>
    <td>
      <%= page.title %>
    </td>
    <td>
      排序
    </td>
    <td>
      <% if page.topic %>
      <%= link_to '查看', topic_page_path(page.topic, page) %>
      <% end %>
    </td>
    <td><%= link_to '编辑', edit_admin_page_path(page) %></td>
    <td><%= link_to '删除', admin_page_path(page), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<div class="pagination">
  <%= will_paginate @pages, :container => false %>
</div>

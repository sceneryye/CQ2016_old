<%= form_for :goods_cat,:url => save_top_admin_goods_cats_path, :html => {:class => "form-horizontal"} do |f| %>
  <fieldset>
    <div class="control-group">
      <%= f.label :addr, "分类名称", :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :cat_name%>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :addr, "商品类型", :class => "control-label" %>
      <div class="controls">
        <%=f.select :brand, Ecstore::GoodType.all.collect {|type| [type.name, type.type_id] },:include_blank=>"请选择" %>
      </div>
    </div>
    
    <div class="control-group">
      <div class="controls">
        <%= f.submit '确定', :class => "btn btn-primary" %>&nbsp;&nbsp;&nbsp;&nbsp;<%= link_to '返回', admin_goods_cats_path %>
      </div>
    </div>

  </fieldset>
<% end %>
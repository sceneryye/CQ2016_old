<h4>
	商品规格
	<%=link_to "新建商品规格",new_admin_specification_path,:class=>"btn btn-primary pull-right"%>
</h4>
<br>
<table class="table table-striped table-bordered">
	<tr>
		<th>规格备注</th>
		<!-- <th>类型</th>
		<th>显示方式</th> -->
		<th>规格名称</th>
		<th>操作</th>
	</tr>
	<%@specs.each do |spec|%>
	<tr>
		<td><%=spec.spec_memo%></td>
<!-- 		<td><%=spec.spec_type%></td>
		<td><%=spec.spec_show_type%></td> -->
		<td><%=spec.spec_name%></td>
		<td>
			<%=link_to "编辑",edit_admin_specification_path(spec)%>
			<%=link_to "删除",admin_specification_path(spec),:method=>:delete, :confirm=>"确定要删除该规格？"%>
		</td>
	</tr>
	<%end%>
</table>
<div class="pagination">
	<%=will_paginate @specs, container: false%>
</div>
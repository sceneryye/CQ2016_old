<%= form_for @goods_label,:url => updateLabel_admin_goods_label_path(@goods_label), :html => {:class => "form-horizontal"} do |f| %>
  <fieldset>
    <div class="control-group">
      <%= f.label :tag_name, "商品标签", :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :tag_name%>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :tag_bgcolor, "商品颜色", :class => "control-label" %>
      <div class="controls">
        <input type="text" id="color" name="color" value="<%=@goods_label.tag_bgcolor%>" />
      </div>
      <div id="colorpicker"></div>
    </div>
    
    <div class="control-group">
      <div class="controls">
        <%= f.submit '确定', :class => "btn btn-primary" %>&nbsp;&nbsp;&nbsp;&nbsp;<%= link_to '返回', admin_goods_labels_path %>
      </div>
    </div>

  </fieldset>
<% end %>
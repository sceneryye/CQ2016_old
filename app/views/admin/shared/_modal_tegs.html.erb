<div class="modal hide" role="dialog" id="tegs">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4>标签选择</h4>
  </div>
  <div class="modal-body">
    <%tegs.each do |teg|%>
        <label class="checkbox inline">
          <%check_box_tag "tegs[]", teg.tag_id%>
          <span value="<%=teg.tag_id%>" class="tri-checkbox" state="none" checktype="double" def="uncheck"></span>
          <span class="teg" style="background-color:<%=teg.tag_bgcolor%>;color:<%=teg.tag_fgcolor%>">
            <%=teg.tag_name%>
          </span>
        </label>
    <%end if tegs%>
  </div>
  <div class="modal-footer">
    <a href="#" class="btn" data-dismiss="modal">取消</a>
    <a href="#" class="btn btn-primary" id="tagged">确定</a>
  </div>
</div>
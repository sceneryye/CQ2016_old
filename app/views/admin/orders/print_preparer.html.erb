		<td style="width:30px;">库存情况</td>
		<td style="width:30px;">订单状态</td>
		<td style="width:30px;">代理费率</td>
		<td style="width:30px;">快递公司</td>
		<td style="width:30px;">入库快递单号</td>
		<td style="width:30px;">快递费用</td>
		<td style="width:30px;">入库时间</td>
	</tr>

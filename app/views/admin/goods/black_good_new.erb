<span>货源小黑板信息</span>
<%= form_for :black_good,:url => @action_url, :method=>"post",:html => {:class => "form-horizontal"} do |f| %>



    <fieldset>

      <%=f.hidden_field :type_id, :value=>"15" %> <!-- 万家小黑板-->
      <%=f.hidden_field :cat_id, :value=>"571" %> <!-- 万家小黑板-->

        <!-- 商品名称-->
      <%#=f.hidden_field :ship_id,:value=>@user.member_id %>


      <div class="control-group">
        <%= f.label :name, "商品名称", :class => "control-label" %>
        <div class="controls">

          <%= f.text_field :name, :class=>"span4"%>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :weight, "商品重量", :class => "control-label" %>
        <div class="controls">

          <%= f.text_field :weight,:class=>"span4"%>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :ship_id, "发布人ID", :class => "control-label" %>
        <div class="controls">
          <%= f.text_field :ship_id ,:class=>"span4"%>
        </div>
      </div>


      <div class="control-group">
        <%= f.label :price, "会员价", :class => "control-label" %>
        <div class="controls">
          <%= f.number_field :price%>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :desc, "商品描述", :class => "control-label" %>
        <div class="controls">
          <%= f.cktext_area :desc,  :toolbar => 'Easy',:language=>'zh-cn',:height => 100,:width=>800 %>
        </div>
      </div>


















      <div class="control-group">
        <div class="controls">
          <%= f.submit '确定', :class => "btn btn-primary" %>
          <%= link_to '返回', admin_goods_path,:class=>"btn" %>
        </div>
      </div>
    </fieldset>
<% end %>



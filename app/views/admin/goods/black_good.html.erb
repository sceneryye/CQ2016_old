<span>货源小黑板信息修改</span>
<%= form_for :black_good,:url => @action_url, :method=>"PUT",:html => {:class => "form-horizontal"} do |f| %>
        <input type="hidden" name="blackgood" value="blackgood">


        <fieldset>



        <div class="control-group">
          <%= f.label :name, "商品名称", :class => "control-label" %>
          <div class="controls">
            <!-- <span class="plain"><%=@good.name%></span> -->
            <%= f.text_field :name, :value=>@good.name,:class=>"span4"%>
          </div>
        </div>
        <div class="control-group">
          <%= f.label :weight, "商品重量", :class => "control-label" %>
          <div class="controls">

            <%= f.text_field :weight,:value=>@good.weight,:class=>"span4"%>
          </div>
        </div>
        <div class="control-group">
          <%= f.label :ship_id, "发布人ID", :class => "control-label" %>
          <div class="controls">
            <%= f.text_field :ship_id ,:value=>@good.ship_id,:class=>"span4"%>
          </div>
        </div>


      <div class="control-group">
          <%= f.label :price, "会员价", :class => "control-label" %>
          <div class="controls">
            <%= f.number_field :price,:value=>@good.price%>
          </div>
        </div>
          <div class="control-group">
            <%= f.label :desc, "商品描述", :class => "control-label" %>
            <div class="controls">
              <%= f.cktext_area :desc, :value=>@good.desc, :toolbar => 'Easy',:language=>'zh-cn',:height => 100,:width=>800 %>
            </div>
          </div>


















        <div class="control-group">
          <div class="controls">
            <%= f.submit '确定', :class => "btn btn-primary" %>
            <%= link_to '返回', admin_goods_path,:class=>"btn" %>
          </div>
        </div>
        </fieldset>
    <% end %>



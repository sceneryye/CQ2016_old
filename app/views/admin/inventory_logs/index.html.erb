<div class="inventory_log-header">
  <h2>库存信息<%= link_to '新建出库入库信息', new_admin_inventory_log_path, :class => "pull-right button" %></h2>

</div>

<table class="table table-bordered table-hover">
  <tr>
    <th>产品</th>
    <th>数量</th>
    <th>出库/入库</th>
    <th colspan="3">操作</th>
  </tr>

<% @inventory_logs.each do |inventory_log| %>
  <tr>
    <th><%= inventory_log.product.name if inventory_log.product %></th>
    <th><%= inventory_log.quantity %></th>
    <th><%= inventory_log.in_out %></th>
    <th>
      <%= link_to '查看', admin_inventory_log_path(inventory_log) %>
    <th><%= link_to '编辑', edit_admin_inventory_log_path(inventory_log) %></th>
    <th><%= link_to '删除', admin_inventory_log_path(inventory_log), method: :delete, data: { confirm: 'Are you sure?' } %></th>
  </tr>
<% end if @inventory_logs%>
</table>

<div class="pagination">
  <%= will_paginate @inventory_logs,renderer: FoundationPagination::Rails, :container => false %>
</div>

<%= form_for :supplier,:url =>@action_url, :method=>@method, :html => {:class => "form-horizontal"} do |f| %>
  <fieldset>
    <div style="float:left;width:450px">
      <div>基本信息</div>
      <div class="control-group">
        <%= f.label :name, "微店名称", :class => "control-label" %>
        <div class="controls">
          <%= f.text_field :name%>
        </div>
      </div>

     
    
    <div class="control-group">
      <div class="controls">
        <%= f.submit '确定', :class => "button" %>&nbsp;&nbsp;&nbsp;&nbsp;<%= link_to '返回', admin_suppliers_path %>
      </div>
    </div>
</div>

  </fieldset>
<% end %>
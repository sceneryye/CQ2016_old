<%=render "form"%>
<table class="table table-bordered">
	<thead>
		<tr>
			<th>分类</th>
			<th>操作</th>
		</tr>
	</thead>
	<tbody>
		<%@categories.each do |category|%>
		<tr>
			<td><%=category.name%></td>
			<td>
				<%=link_to "编辑",edit_admin_category_path(category)%>
				<%=link_to "删除",admin_category_path(category),:method=>:delete,:confirm=>"确定删除吗？"%>
			</td>
		</tr>
		<%end%>
	</tbody>
</table>
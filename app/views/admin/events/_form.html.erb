
<%= form_for @event,:url=>@create_or_update_path ,:html => {:class => "form-horizontal"} do |f| %>
  <% if @event.errors.any? %>
      <div class="notice">
        <ul>
        <% @event.errors.messages.each do |key,msg| %>
          <li><%= msg.join(",") %></li>
        <% end %>
        </ul>
      </div>
  <% end %>

  <fieldset>
    <div class="control-group">
      <%= f.label :name, "活动名称", :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :name, :placeholder => "活动名称" %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :body, "内容", :class => "control-label" %>
      <div class="controls">
        <%= f.cktext_area :body, :toolbar => 'Easy',:language=>'zh-cn',:height => 300 %>
      </div>
    </div>
    <div class="control-group">
      <div class="controls">
        <%= f.submit '确定', :class => "btn btn-primary" %>
        &nbsp;&nbsp;&nbsp;&nbsp;
        <%= link_to '返回', admin_events_path %>
      </div>
    </div>
  </fieldset>
<% end %>